<MudStack Row="true">
    <MudStack Spacing="1">
        <MudText>Услуга: <b>@Service.Name</b></MudText>
        <MudText>План: <b>@Service.Plan</b> шт</MudText>
        <MudStack Row="true" Spacing="1">
            <MudText> Факт:</MudText>
            <MudNumericField @bind-Value="@Service.Fact" @ref="StringFactRef" OnBlur="@(async()=> await UpdateCompanyAsync(Service.Name))" DisableUnderLine="true"
                             Adornment="Adornment.End" AdornmentText="шт" T="ushort?" HideSpinButtons="true"
                             Validation="@(new Func<ushort?, IEnumerable<string>>(NumberStrength))" Immediate="true"
                             Style="height:12px; width:60px; font-weight:bold; margin:0px; position:center" />
        </MudStack>        
        <MudText>До 85%: <b style="color: @ColorEightyFive">@EightyFive</b> шт</MudText>
        <MudText>До 100%: <b style="color: @ColorOneHundred">@OneHundred</b> шт</MudText>
        <MudText>Целевой <b>%</b> на текущую дату: <b>@TargetPercentage</b>%</MudText>
        <MudText>Факт на текущую дату: <b style="color: @ColorFactOfToday">@FactOfToday</b>%</MudText>
        <MudText>Разница на текущую дату: <b style="color: @ColorDeltaFact">@DeltaFact</b> шт</MudText>
        
    </MudStack>
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Style="width:50px; margin-left:-150px; margin-bottom: 60px">
        <MudIconButton OnClick="@(() => StringFactRef.FocusAsync())" Icon="@Icons.Material.Outlined.Edit" Color="Color.Success" Size="Size.Small" />
    </MudStack> 
</MudStack>





