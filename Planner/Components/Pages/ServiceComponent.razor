<MudStack Row="true">
    <MudStack Spacing="1">
        <MudText>Услуга: <b>@Service.Name</b></MudText>
        <MudText>План: <b>@Service.Plan</b> шт</MudText>
        <MudStack Row="true" Spacing="1">
            <MudText> Факт:</MudText>
            <MudNumericField @bind-Value="@Service.Fact" @ref="StringFactRef" OnBlur="@(async()=> await UpdateCompanyAsync(Service.Name))" DisableUnderLine="true"
                             Adornment="Adornment.End" AdornmentText="шт" T="ushort?" ErrorText="Неверные данные" HideSpinButtons="true"
                             Style="height:15px; width:55px; font-weight:bold; margin:0px" />
        </MudStack>
        <MudText>До 85%: <b>@EightyFive</b> шт</MudText>
        <MudText>До 100%: <b>@OneHundred</b> шт</MudText>
    </MudStack>
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Style="width:50px">
        <MudIconButton OnClick="@(() => StringFactRef.FocusAsync())" Icon="@Icons.Material.Outlined.Edit" Color="Color.Success" Size="Size.Small" />
    </MudStack>
</MudStack>





