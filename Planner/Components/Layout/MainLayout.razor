
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @Name
        <MudSpacer />
        <MudIcon Icon="@Icons.Material.Filled.CurrencyRuble" Color="Color.Inherit" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pa-1">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
